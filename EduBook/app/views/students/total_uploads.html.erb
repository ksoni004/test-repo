
<table style="border-width:2px black; background-color: #D3D3D3; table-layout:fixed" class="table table-bordered">
	<colgroup>
	  <col style="width:100px">
	  <col style="width:89px">
	  <col style="width:100px">
	  <col style="width:150px">
	  <col style="width:75px">
	</colgroup>
	<tr style="background-color: grey">
	    <th style="text-align:center;width:100px;border:2px solid black">Uploaded by</th>
	    <th style="text-align:center;width:89px;border:2px solid black">Subject</th>
	    <th style="text-align:center;width:100px;border:2px solid black">Uploaded on</th>
	    <th style="text-align:center;width:150px;border:2px solid black">Comment</th>
	    <th colspan=2 style="text-align:center;width:75px;border:2px solid black">Options</th>
	</tr>

	<% @documents.each do |document| %>
		<tr style="border:2px solid grey">
			<td style="border:2px solid black" align="center"><%= document.teacher_name %></td>
			<td style="border:2px solid black" align="center"><%= document.course_name %></td>
			<td style="border:2px solid black" align="center"><%= document.created_at.to_formatted_s(:long_ordinal)%></td>
			<td style="border:2px solid black" align="center"><%= document.comment %></td>
			<td colspan=2 style="border:2px solid black"align="center">
				<p>
				<a class="btn btn-primary btn-sm" href="http://docs.google.com/viewer?url=http://enigmatic-dawn-9721.herokuapp.com<%= document.avatar.url%>&embedded=true" target="_blank"><i style="margin-right:5px" class="fa fa-file-pdf-o"></i>View</a>
				<a class="btn btn-warning btn-sm" href= "<%= document.avatar.url%>"><i style="margin-right:5px" class="fa fa-download"></i>Download</a>
				</p>
			</td>
		</tr>
	<% end %>
</table>
<div class="apple_pagination" style="position:absolute;left:550px;top:550px">
	<%=will_paginate @documents%>
</div>
<script>
	
	var total_count = <%=@total_count%>
	$("#total_count").html(total_count);
	var noti_count = <%=@noti_count%>
	$("#noti_count").html(noti_count);		
</script>