<!DOCTYPE html>
<html>
<head>
  <title>EduBook</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div style="background-color:#E0E0E0" class="navbar navbar-default" id="subnav">
  <div class="col-md-12">
    <div class="navbar-header">
      <ul class="nav navbar-nav navbar-left">
        <li><a href="/">EduBook</a></li>
        <li><a href="/profile">Profile</i></a></li>
        <li><a href="/upload_file">Upload Notes</a></li>
        <li class="dropdown">
          <a href="#" data-toggle="dropdown">Add <small><i style="color:lightblack"class="glyphicon glyphicon-chevron-down"></i></small></a>
          <ul class="dropdown-menu" role="menu" style="margin-top:5px">
            <li role="presentation" style="margin-left:5px">
              <a role="menuitem" tabindex="-1" href="/course" class="book">
                <span class="glyphicon glyphicon-book"><span class="course">Course</span>
              </a>
            </li>
            <li role="presentation" style="margin-left:5px">
              <a role="menuitem" tabindex="-1" href="/notification">
                <span class="glyphicon glyphicon-bell"></span><span class="course"> Notification</span> 
              </a>
            </li>
          </ul>
        </li>
        <li><a href="/overall_uploads">Uploads<span id="total_count" style="position:absolute;right:0px;margin-top:-10px" class="badge"></span></a></li>
        <li><a href="/overall_notifications"tabindex="1"><i style="font-size:18px" class="fa fa-bell-o"></i><span id="noti_count" style="position:absolute;right:0.01px;margin-top:-10px" class="badge"></span></a></li>
      </ul>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse2">
      <div class="nav navbar-nav navbar-right">
        <a href="#" style="margin-left:15px;" class="navbar-btn btn btn-default btn-plus dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars" style="color:black"></i></a>
        <ul class="nav dropdown-menu">
          <li><a href="/my_courses"><i class="fa fa-book"></i> My Courses</a></li>
          <li><a href="/uploads"><i class="fa fa-upload"></i> My Uploads<span id="my_count" style="position:absolute;right:35px;margin-top:-10px" class="badge"></span></a></li>
          <li><a href="/my_notifications"><i class="fa fa-bell-o"></i> My Notifications<span id="my_noti_count" style="position:absolute;right:10px;margin-top:-10px" class="badge"></span></a></li>
          <li class="nav-divider"></li>
          <li><a href="/change_password"><i class="fa fa-wrench"></i> Change Password</a></li>
          <li><a href="/t_feedback"><i class="fa fa-star-o"></i> Feedback</a></li>
          <li><a href="/logout"><i class="fa fa-power-off"></i> Logout</a></li>
        </ul>
      </div>
    </div>  
 </div> 
</div>
<script>
  $(document).ready(function(){
    var loc = window.location.pathname
    $(".navbar-left li").find("a").each(function(){
      $(this).toggleClass("active", $(this).attr("href")==loc);
    });
    
  });
</script>
<div id="wrap">
<%= yield %>
</div>

</body>

</html>