
<nav class="navbar navbar-inverse" role="navigation">
	<span class="navbar-brand" style="margin-top:6px;color:#00FFFF"href="#">EduBook</span>
	<a class="navbar-brand" style="margin-top:6px"href="/profile">Profile</a>
	<a class="navbar-brand" style="margin-top:6px"href="/upload_file">Uplaod Notes</a>
	<a class="navbar-brand" style="margin-top:6px"href="/course">Add Course</a>
	<a class="navbar-brand" style="margin-top:6px"href="/uploads">My Uploads <span class="badge" id="my_count"></span></a>
	<a class="navbar-brand" style="margin-top:6px"href="/overall_uploads">Overall Uploads <span class="badge" id="total_count"></span></a>

	<div>
		<form action="/logout" method="post">

			<div style="margin-top:10px">
				<input style="float:right" class="btn btn-info" type="submit" value="Logout" />
			</div>
		</form>
	</div>
	
</nav>
<table style="border-width:2px black; background-color: #D3D3D3; table-layout:fixed" class="table table-bordered" id="total_count">
	<colgroup>
	  <col style="width:100px">
	  <col style="width:89px">
	  <col style="width:100px">
	  <col style="width:150px">
	  <col style="width:75px">
	</colgroup>
	<tr style="background-color: grey">
	    <th style="text-align:center;width:100px;border:2px solid black">Uploaded by</th>
	    <th style="text-align:center;width:89px;border:2px solid black">Subject</th>
	    <th style="text-align:center;width:100px;border:2px solid black">Uploaded on</th>
	    <th style="text-align:center;width:150px;border:2px solid black">Comment</th>
	    <th colspan=2 style="text-align:center;width:75px;border:2px solid black">Options</th>
	</tr>

	<% i=0 %>
	<% @courses.each do |c| %>
		<% c.each do |course| %>
		<% if !course.documents.blank? %>
			<% course.documents.each do |document| %>
				<tr style="border:2px solid grey">
					<td style="border:2px solid black" align="center"><%= @teachers.at(i).name %></td>
					<td style="border:2px solid black" align="center"><%= course.course_name %></td>
					<td style="border:2px solid black" align="center"><%= document.created_at %></td>
					<td style="border:2px solid black" align="center"><%= document.comment %></td>
					<td colspan=2 style="border:2px solid black"align="center">
						<p>
						<a class="btn btn-primary btn-sm" href=><i style="margin-right:5px" class="fa fa-file-pdf-o"></i>View</a>
						<a class="btn btn-warning btn-sm" href= "<%= document.avatar.url%>"><i style="margin-right:5px" class="fa fa-download"></i>Download</a>
						</p>
					</td>
				</tr>
			<% end %>
		<% end %>
		<% end %>
		<% i=i+1 %>
	<% end %>
</table>

<script>
	var my_count = <%=@my_count%>
	$("#my_count").html(my_count);
	var total_count = <%=@total_count%>
	$("#total_count").html(total_count);
</script>