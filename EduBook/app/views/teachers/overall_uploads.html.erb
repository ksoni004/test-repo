
<div class="container"style="background-color:white">

<table style="border-width:2px black;margin-top:20px;table-layout:fixed" class="table table-bordered" id="total_count">
	<colgroup>
	  <col style="width:100px">
	  <col style="width:89px">
	  <col style="width:100px">
	  <col style="width:150px">
	  <col style="width:75px">
	  <col style="width:50px">
	</colgroup>
	<thead>
	    <th style="text-align:center;width:100px;">Uploaded by</th>
	    <th style="text-align:center;width:89px;">Subject</th>
	    <th style="text-align:center;width:100px;">Uploaded on</th>
	    <th style="text-align:center;width:150px;">Comment</th>
	    <th colspan="2" style="text-align:center;width:75px;">Options</th>
	</thead>

	<% @documents.each do |document| %>
	
		<tr>
			<td align="center"><%= document.teacher_name %></td>
			<td align="center"><%= document.course_name %></td>
			<td align="center"><%= document.created_at.to_formatted_s(:long_ordinal) %></td>
			<td align="center"><%= document.comment %></td>
			<td colspan="2"align="center">
			<div>
				<p>
					<a style="border-radius: 0px 0px 0px 0px" class="btn btn-info btn-sm" href="http://docs.google.com/viewer?url=http://enigmatic-dawn-9721.herokuapp.com<%= document.avatar.url%>&embeded=true" target="_blank"><i style="margin-right:5px" class="fa fa-file-pdf-o"></i>View</a>
					<a style="border-radius: 0px 0px 0px 0px" type="button" id="<%=document.id%>" class="download_button btn btn-primary btn-sm" href= "<%= document.avatar.url%>"><i style="margin-right:5px" class="fa fa-download"></i>Download</a>
					<i style="margin-left:4px;font-size:2em" class="fa fa-download fa-6"></i><span style="margin-left:5px" id="<%=document.id%>_counter" name="counter"><%=document.counter%></span>
				</p>
			</div>
			</div>
			</td>
		</tr>
	<% end %>

</table>
</div>

<div class="apple_pagination" style="position:absolute;left:550px;top:550px">
	<%=will_paginate @documents%>
</div>

<script>


		var my_count = <%=@my_count%>
		$("#my_count").html(my_count);
		var total_count = <%=@total_count%>
		$("#total_count").html(total_count);
		var noti_count = <%=@noti_count%>
		$("#noti_count").html(noti_count);
		var my_noti_count = <%=@my_noti_count%>
		$("#my_noti_count").html(my_noti_count);

	$(".download_button").on('click', function(e)
	{
		var id = e.currentTarget.id;
	  var data = {};
		data["id"] = id;
    $.ajax(
    	{
    		url : "/overall_uploads",
    		method : "POST",
    		data : data,
    		async: false
    	}).done(function(data)
	  		{
	  			$("#"+id+"_counter").html(data);
	  		});
	});

</script>
